extends layout
block indexcss 
  link(rel="stylesheet" href="/stylesheets/indexcss.css")
block content
  h1= title
  p(style="font-weight: bold;") #{title}
  div.car-frame 
    div.car-container 
      if car_instance.image 
        img(src= car_instance.image , alt="", srcset="")
      else
        img(src= car_image_path, alt="", srcset="")
      p #{car_instance.plate}
      p #{car_instance.model.make.name}
      p #{car_instance.model.name}
  p #[a(href= car_instance.url + "/update") Update]  
  p #[a(href= car_instance.url + "/delete") Delete]  


        
    
